{
    // Todo Tree
    "todo-tree.highlights.defaultHighlight": {
        "foreground": "white",
        "background": "red",
        "icon": "check",
        "type": "text",
        "gutterIcon": true
    },
    "todo-tree.highlights.customHighlight": {
        "BUG": {
            "icon": "bug"
        },
        "HACK": {
            "icon": "tools"
        },
        "TODO": {
            "icon": "check-circle",
            "background": "#09b004",
            "iconColour": "#09b004"
        },
        "FIXME": {
            "icon": "flame",
            "background": "#d65d0e",
            "foreground": "#282828",
            "iconColour": "#d65d0e",
            "type": "text",
            "gutterIcon": true
        },
        "XXX": {
            "icon": "x"
        },
        "[ ]": {
            "icon": "issue-draft"
        },
        "[x]": {
            "icon": "issue-closed"
        }
    },
    "todo-tree.highlights.useColourScheme": true,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "FIX",
        "FIXIT",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.general.tagGroups": {
        "FIXME": [
            "FIXME",
            "FIXIT",
            "FIX",
        ],
    },
}